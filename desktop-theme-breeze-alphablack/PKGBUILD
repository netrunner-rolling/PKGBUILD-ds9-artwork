pkgname=desktop-theme-breeze-alphablack
pkgver=$(date +%Y.%m)
pkgrel=1
pkgdesc="A semi-transparent black theme based on top of the default Breeze theme plus alphablack control widget"
arch=('any')
url='https://github.com/netrunner-rolling/desktop-theme-breeze-alphablack'
license=('GPL')
groups=('ds9-artwork')
makedepends=('git')
source=('git://github.com/netrunner-rolling/desktop-theme-breeze-alphablack')
md5sums=('SKIP')

package() {
  cd $srcdir/$pkgname
  cp -aR usr $pkgdir/
}
